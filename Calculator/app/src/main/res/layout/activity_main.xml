<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/calculationHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:gravity="right|bottom"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="21 + 36 * 89"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintVertical_chainStyle="spread_inside"  />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/calculationHistory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonPanel"
        android:textColor="@color/colorAccent"
        android:gravity="center_vertical|right"
        android:text="537"
        android:textSize="40sp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fontFamily="sans-serif-light" />

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="C"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/percentageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="%"
                android:fontFamily="sans-serif-light"

                android:textSize="30sp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="โต"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"
                />
            <Button
                android:id="@+id/divideBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="รท"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="7"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/eightBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="8"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/nineBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="9"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/multiplyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="x"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/oneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="1"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/twoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="2"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/threeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="3"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/substractBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="-"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/oneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="1"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/twoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="2"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/threeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="3"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/additionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="+"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="0"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/doubleZeroBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="00"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/decimalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="."
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"

                />
            <Button
                android:id="@+id/equalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:text="="
                android:textAllCaps="false"
                android:textSize="30sp"
                android:padding="16dp"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
