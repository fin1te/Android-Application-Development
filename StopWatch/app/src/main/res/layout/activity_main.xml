<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ninja_background"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ninja_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />

    <TextView
        android:id="@+id/banner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Healthy On You"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/motto"
        app:layout_constraintTop_toBottomOf="@+id/ninja_background"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/motto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't Wish For A Good Body, Work For It."
        android:textAlignment="center"
        android:textSize="24sp"
        android:paddingLeft="24dp"
        android:fontFamily="sans-serif-light"
        android:paddingRight="24dp"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/banner_text"
        app:layout_constraintBottom_toTopOf="@+id/start_btn"
        app:layout_constraintVertical_bias="0.20"
        />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_start_training_btn"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="16dp"
        android:paddingTop="22dp"
        android:paddingRight="16dp"
        android:paddingBottom="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="START TRAINING"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#6d1d18"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motto"
        app:layout_constraintVertical_bias="0.51"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>